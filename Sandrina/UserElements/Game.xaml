<UserControl x:Class="Sandrina.UserElements.Game"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:Sandrina.UserElements"
			 mc:Ignorable="d">

	<UserControl.Resources>
		<SolidColorBrush x:Key="MyGreen"
						 Color="#FFA3DA95" />
		<SolidColorBrush x:Key="MyFontColor"
						 Color="#FF3E2A35" />
		<SolidColorBrush x:Key="LightBlue"
						 Color="#FFC6E2E9" />
		<SolidColorBrush x:Key="MidBlue"
						 Color="#FF82A0B2" />
		<SolidColorBrush x:Key="DarkBlue"
						 Color="#FF223444" />
		<SolidColorBrush x:Key="MyPeach"
						 Color="#FFFFCAAF " />
		<SolidColorBrush x:Key="MyDarkPeach"
						 Color="#FFF19C85" />
		<SolidColorBrush x:Key="MyFontColor2"
						 Color="#FF673B3F" />
		<SolidColorBrush x:Key="MyDarkGreen"
						 Color="#FF06B025" />
		<SolidColorBrush x:Key="MyLightGreen"
						 Color="#FFA3DA95" />
		<SolidColorBrush x:Key="LightYellow"
						 Color="#F1FFC4" />
		<SolidColorBrush x:Key="MyMint"
						 Color="#FFB0DACD" />
	</UserControl.Resources>

	<Grid Background="{DynamicResource LightYellow}">
		<TabControl BorderBrush="{DynamicResource MyPeach}"
					Background="{DynamicResource MyPeach}"
					Margin="0">
			<TabItem x:Name="Wardrob"
					 Header="Dress up"
					 BorderBrush="#FFFFCAAF"
					 Background="#FFFFCAAF"
					 FontSize="18"
					 Foreground="#FF3E2A35">
				<Grid x:Name="MainGrid"
					  Background="#FFFFCAAF">
					<Grid.RowDefinitions>
						<RowDefinition Height="50" />
						<RowDefinition Height="150" />
						<RowDefinition Height="30" />
						<RowDefinition Height="100" />
						<RowDefinition Height="1*" />
						<RowDefinition Height="30" />
						<RowDefinition Height="50" />
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*" />
						<ColumnDefinition Width="100" />
						<ColumnDefinition Width="100" />
						<ColumnDefinition Width="100" />
					</Grid.ColumnDefinitions>

					<Label Content="Гардероб"
						   FontSize="26"
						   FontFamily="Segoe Print"
						   FontWeight="Bold"
						   Grid.Column="1"
						   Grid.ColumnSpan="3"
						   VerticalContentAlignment="Center"
						   HorizontalContentAlignment="Center" />

					<Image Stretch="Fill"
						   Source="/Sandrina;component/Images/Left.png"
						   Grid.Column="1"
						   Height="150"
						   Width="50"
						   HorizontalAlignment="Right"
						   Grid.Row="1" />
					<ListBox x:Name="Box"
							 Height="125"
							 Background="#FF3E2A35"
							 BorderBrush="#25191f"
							 Grid.Column="2"
							 Grid.Row="1" />
					<Image Stretch="Fill"
						   Source="/Sandrina;component/Images/Right.png"
						   Grid.Column="3"
						   Height="150"
						   Width="50"
						   HorizontalAlignment="Left"
						   Grid.ColumnSpan="2"
						   Grid.Row="1" />

					<RadioButton x:Name="Polly"
								 Content="1 аутфит"
								 GroupName="Costumes"
								 FontSize="20"
								 Checked="Polly_Checked"
								 Grid.Column="1"
								 Grid.Row="2"
								 VerticalContentAlignment="Center" />
					<RadioButton x:Name="Alex"
								 Content="2 аутфит"
								 GroupName="Costumes"
								 FontSize="20"
								 Checked="Alex_Checked"
								 Grid.Column="3"
								 Grid.Row="2"
								 VerticalContentAlignment="Center" />
					<Button x:Name="Get_dressed"
							Content="Примерить"
							Margin="50,20"
							Background="#FFC86B65"
							Click="Get_dressed_Click"
							FontFamily="Segoe Print"
							Grid.Column="1"
							Grid.Row="3"
							Grid.ColumnSpan="3" />
					<CheckBox x:Name="Pets"
							  Content="Животное"
							  Margin="50,0"
							  FontSize="24"
							  Checked="Pets_Checked"
							  Unchecked="Pets_Unchecked"
							  Grid.Column="1"
							  Grid.ColumnSpan="3"
							  Grid.Row="5"
							  VerticalContentAlignment="Center" />
					<RadioButton x:Name="Cat"
								 Content="Кошка"
								 Margin="0"
								 FontSize="20"
								 GroupName="Pet"
								 IsEnabled="False"
								 Checked="Cat_Checked"
								 Unchecked="Cat_Unchecked"
								 Grid.Column="3"
								 Grid.Row="6"
								 VerticalContentAlignment="Center" />
					<RadioButton x:Name="Dog"
								 Content="Собака"
								 Margin="0"
								 FontSize="20"
								 GroupName="Pet"
								 IsEnabled="False"
								 Checked="Dog_Checked"
								 Unchecked="Dog_Unchecked"
								 Grid.Column="1"
								 Grid.Row="6"
								 VerticalContentAlignment="Center" />
					<Grid x:Name="SecondGrid"
						  Margin="10,10,10,10"
						  Background="#FFD7AE87"
						  Grid.RowSpan="7">
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="1*" />
							<ColumnDefinition Width="2*" />
						</Grid.ColumnDefinitions>
						<Image SnapsToDevicePixels="True"
							   Stretch="Uniform"
							   HorizontalAlignment="Right"
							   Source="/Sandrina;component/Images/DefaultSandrina.png"
							   Grid.Column="1"/>
						<Image x:Name="AlexCostume"
							   SnapsToDevicePixels="True"
							   Stretch="Uniform"
							   Source="/Sandrina;component/Images/DefaultSandrinaInSashaClothes.png"
							   Visibility="Hidden"
							   Grid.Column="1" />
						<Image x:Name="CostumePolly"
							   SnapsToDevicePixels="True"
							   Stretch="Uniform"
							   Source="/Sandrina;component/Images/DefaultSandrinaInPolinaClothes.png"
							   Visibility="Hidden"
							   Grid.Column="1" />
						<Image x:Name="CatImage"
							   VerticalAlignment="Bottom"
							   HorizontalAlignment="Right"
							   SnapsToDevicePixels="True"
							   Stretch="Uniform"
							   Source="/Sandrina;component/Images/Catto.png"
							   Visibility="Visible"/>
						<Image x:Name="DogImage"
							   VerticalAlignment="Bottom"
							   Margin="0,0,-10,0"
							   Height="138"
							   Width="138"
							   Source="/Sandrina;component/Images/Doggo.png"
							   Visibility="Hidden"
							   Stretch="Uniform"
							   Grid.Column="0" />
					</Grid>
				</Grid>
			</TabItem>
			<TabItem x:Name="Main"
					 Header="Game play"
					 FontSize="18"
					 Background="{DynamicResource LightBlue}"
					 Foreground="{DynamicResource MyFontColor}">
				<Grid Margin="0,-1,1.6,-0.2"
					  Background="{DynamicResource MyMint}">
					<Grid Margin="10,390,0,10"
						  HorizontalAlignment="Left"
						  Width="382">
						<ProgressBar x:Name="HP"
									 HorizontalAlignment="Left"
									 Height="32"
									 Margin="101,27,0,0"
									 VerticalAlignment="Top"
									 Width="253"
									 Value="100"
									 BorderBrush="{DynamicResource MyDarkGreen}"
									 Foreground="{DynamicResource MyLightGreen}">
						</ProgressBar>
						<ProgressBar x:Name="Cold"
									 HorizontalAlignment="Left"
									 Height="30"
									 Margin="101,100,0,0"
									 VerticalAlignment="Top"
									 Width="253"
									 Value="50"
									 BorderBrush="{DynamicResource MyDarkGreen}"
									 Foreground="{DynamicResource MyLightGreen}">
						</ProgressBar>
						<Label x:Name="TextHP"
							   Content="HP"
							   HorizontalAlignment="Left"
							   Height="32"
							   Margin="29,27,0,0"
							   VerticalAlignment="Top"
							   Width="41"
							   FontSize="18"
							   Padding="0"
							   Foreground="{DynamicResource MyFontColor}">
						</Label>
						<Label x:Name="TextFun"
							   Content="Fun"
							   HorizontalAlignment="Left"
							   Height="32"
							   Margin="29,63,0,0"
							   VerticalAlignment="Top"
							   Width="53"
							   FontSize="18"
							   Padding="0"
							   Foreground="{DynamicResource MyFontColor}">
						</Label>
						<Label x:Name="TextCold"
							   Content="Temp"
							   HorizontalAlignment="Left"
							   Height="32"
							   Margin="29,100,0,0"
							   VerticalAlignment="Top"
							   Width="56"
							   Padding="0"
							   FontSize="18"
							   Foreground="{DynamicResource MyFontColor}">
						</Label>
						<ProgressBar x:Name="Fun"
									 HorizontalAlignment="Left"
									 Height="32"
									 Margin="101,63,0,0"
									 VerticalAlignment="Top"
									 Width="253"
									 Value="50"
									 BorderBrush="{DynamicResource MyDarkGreen}"
									 Foreground="{DynamicResource MyLightGreen}">
						</ProgressBar>
					</Grid>

					<CheckBox x:Name="plaid"
							  Content="Плед"
							  HorizontalAlignment="Left"
							  Height="25"
							  Margin="490,229,0,0"
							  VerticalAlignment="Top"
							  Width="131"
							  Padding="2,-10,0,0"
							  ScrollViewer.CanContentScroll="True"
							  FontSize="24"
							  Foreground="{DynamicResource DarkBlue}">
					</CheckBox>
					<Label x:Name="Text"
						   Content="Взаимодействие"
						   Height="47"
						   Margin="535,10,96,0"
						   VerticalAlignment="Top"
						   FontSize="24"
						   Foreground="{DynamicResource DarkBlue}">
					</Label>
					<Button x:Name="Fanfiks"
							Content="Фанфики"
							HorizontalAlignment="Left"
							Height="43"
							Margin="490,84,0,0"
							VerticalAlignment="Top"
							Width="131"
							FontSize="24"
							Click="Fanfiks_Click"
							Foreground="{DynamicResource DarkBlue}"
							BorderBrush="{DynamicResource MidBlue}"
							Background="{DynamicResource LightBlue}">
					</Button>
					<Button x:Name="Music"
							Content="Музыка"
							HorizontalAlignment="Left"
							Height="43"
							Margin="655,84,0,0"
							VerticalAlignment="Top"
							Width="131"
							FontSize="24"
							Click="Music_Click"
							IsEnabled="False"
							Foreground="{DynamicResource DarkBlue}"
							BorderBrush="{DynamicResource MidBlue}"
							Background="{DynamicResource LightBlue}">
					</Button>
					<Button x:Name="Cake"
							Content="Тортики"
							HorizontalAlignment="Left"
							Height="43"
							Margin="490,158,0,0"
							VerticalAlignment="Top"
							Width="131"
							FontSize="24"
							Background="#FFC6E2E9"
							Click="Cake_Click"
							Foreground="{DynamicResource DarkBlue}"
							BorderBrush="{DynamicResource MidBlue}">
					</Button>
					<Button x:Name="Coffe"
							Content="Кофе"
							HorizontalAlignment="Left"
							Height="43"
							Margin="655,158,0,0"
							VerticalAlignment="Top"
							Width="131"
							FontSize="24"
							Background="#FFC6E2E9"
							Click="Coffe_Click"
							Foreground="{DynamicResource DarkBlue}"
							BorderBrush="{DynamicResource MidBlue}">
					</Button>
					<CheckBox x:Name="headphone"
							  Content="Наушники"
							  HorizontalAlignment="Left"
							  Height="25"
							  Margin="655,229,0,0"
							  VerticalAlignment="Top"
							  Width="131"
							  Padding="2,-10,0,0"
							  ScrollViewer.CanContentScroll="True"
							  FontSize="24"
							  Click="headphone_Click"
							  Foreground="{DynamicResource DarkBlue}">
					</CheckBox>
				</Grid>
			</TabItem>
		</TabControl>
	</Grid>
</UserControl>
