<UserControl x:Class="Sandrina.UserElements.Game"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sandrina.UserElements"
             mc:Ignorable="d">
	
	<UserControl.Resources>
		<SolidColorBrush x:Key="MyGreen"
						 Color="#FFA3DA95" />
		<SolidColorBrush x:Key="MyFontColor"
						 Color="#FF3E2A35" />
		<SolidColorBrush x:Key="LightBlue"
						 Color="#FFC6E2E9" />
		<SolidColorBrush x:Key="MidBlue"
						 Color="#FF82A0B2" />
		<SolidColorBrush x:Key="DarkBlue"
						 Color="#FF223444" />
		<SolidColorBrush x:Key="MyPeach"
						 Color="#FFFFCAAF " />
		<SolidColorBrush x:Key="MyDarkPeach"
						 Color="#FFF19C85" />
		<SolidColorBrush x:Key="MyFontColor2"
						 Color="#FF673B3F" />
		<SolidColorBrush x:Key="MyDarkGreen"
						 Color="#FF06B025" />
		<SolidColorBrush x:Key="MyLightGreen"
						 Color="#FFA3DA95" />
		<SolidColorBrush x:Key="LightYellow"
						 Color="#FFF1FFC4" />
		<SolidColorBrush x:Key="MyMint"
						 Color="#FFB0DACD" />
	</UserControl.Resources>

	<Grid Background="{DynamicResource LightYellow}">
		<TabControl HorizontalAlignment="Left"
					Height="585"
					VerticalAlignment="Top"
					Width="855"
					BorderBrush="{DynamicResource MyPeach}"
					Background="{DynamicResource MyPeach}">
			<TabItem x:Name="Wardrob"
					 Header="Dress up"
					 BorderBrush="#FFFFCAAF"
					 Background="#FFFFCAAF"
					 FontSize="18"
					 Foreground="#FF3E2A35">
				<Grid x:Name="MainGrid"
					  Background="#FFFFCAAF">

					<RadioButton x:Name="Polly"
								 Content="1 аутфит"
								 HorizontalAlignment="Left"
								 Margin="534,283,0,0"
								 VerticalAlignment="Top"
								 GroupName="Costumes"
								 FontSize="20"
								 Checked="Polly_Checked" />
					<RadioButton x:Name="Alex"
								 Content="2 аутфит"
								 HorizontalAlignment="Left"
								 Margin="682,283,0,0"
								 VerticalAlignment="Top"
								 GroupName="Costumes"
								 FontSize="20"
								 Checked="Alex_Checked" />
					<CheckBox x:Name="Pets"
							  Content="Животное"
							  HorizontalAlignment="Left"
							  Margin="594,411,0,0"
							  VerticalAlignment="Top"
							  FontSize="24"
							  Checked="Pets_Checked"
							  Unchecked="Pets_Unchecked" />
					<RadioButton x:Name="Cat"
								 Content="Кошка"
								 HorizontalAlignment="Left"
								 Margin="517,460,0,0"
								 VerticalAlignment="Top"
								 FontSize="20"
								 GroupName="Pet"
								 IsEnabled="False"
								 Checked="Cat_Checked"
								 Unchecked="Cat_Unchecked" />
					<RadioButton x:Name="Dog"
								 Content="Собака"
								 HorizontalAlignment="Left"
								 Margin="713,460,0,0"
								 VerticalAlignment="Top"
								 FontSize="20"
								 RenderTransformOrigin="0.621,0.699"
								 GroupName="Pet"
								 IsEnabled="False"
								 Checked="Dog_Checked"
								 Unchecked="Dog_Unchecked" />
					<Button x:Name="Get_dressed"
							Content="Примерить"
							HorizontalAlignment="Left"
							Margin="549,332,0,0"
							VerticalAlignment="Top"
							Width="222"
							Height="59"
							Background="#FFC86B65"
							Click="Get_dressed_Click"
							FontFamily="Segoe Print" />
					<ListBox x:Name="Box"
							 HorizontalAlignment="Left"
							 Height="144"
							 Margin="549,83,0,0"
							 VerticalAlignment="Top"
							 Width="216"
							 Background="#FF3E2A35" />
					<Image Margin="519,69,301,304.6"
						   Stretch="Fill"
						   Source="/Sandrina;component/Images/Right.png" />
					<Label Content="Гардероб"
						   HorizontalAlignment="Left"
						   Margin="588,17,0,0"
						   VerticalAlignment="Top"
						   Width="136"
						   FontSize="26"
						   FontFamily="Segoe Print"
						   FontWeight="Bold" />
					<Grid x:Name="SecondGrid"
						  HorizontalAlignment="Left"
						  Height="469"
						  Margin="51,50,0,0"
						  VerticalAlignment="Top"
						  Width="350"
						  RenderTransformOrigin="0.315,0.4"
						  Background="#FFD7AE87">
						<Image HorizontalAlignment="Left"
							   Height="469"
							   Margin="114,0,0,0"
							   VerticalAlignment="Top"
							   Width="236"
							   Source="/Sandrina;component/Images/DefaultSandrina.png" />
						<Image x:Name="AlexCostume"
							   HorizontalAlignment="Left"
							   Height="462"
							   Margin="114,7,0,0"
							   VerticalAlignment="Top"
							   Width="236"
							   Source="/Sandrina;component/Images/DefaultSandrinaInSashaClothes.png"
							   Visibility="Hidden" />
						<Image x:Name="CatImage"
							   HorizontalAlignment="Left"
							   Height="138"
							   Margin="16,302,0,0"
							   VerticalAlignment="Top"
							   Width="114"
							   Source="/Sandrina;component/Images/Catto.png"
							   Visibility="Hidden" />
						<Image x:Name="CostumePolly"
							   HorizontalAlignment="Left"
							   Height="469"
							   Margin="120,0,0,0"
							   VerticalAlignment="Top"
							   Width="220"
							   Source="/Sandrina;component/Images/DefaultSandrinaInPolinaClothes.png"
							   Visibility="Hidden" />
						<Image x:Name="DogImage"
							   HorizontalAlignment="Left"
							   Height="138"
							   Margin="17,302,0,0"
							   VerticalAlignment="Top"
							   Width="138"
							   Source="/Sandrina;component/Images/Doggo.png"
							   Visibility="Hidden" />
					</Grid>
					<Image HorizontalAlignment="Left"
						   Height="175"
						   Margin="765,69,0,0"
						   VerticalAlignment="Top"
						   Width="33"
						   Source="/Sandrina;component/Images/Right.png" />
				</Grid>
			</TabItem>
			<TabItem x:Name="Main"
					 Header="Game play"
					 FontSize="18"
					 Background="{DynamicResource LightBlue}"
					 Foreground="{DynamicResource MyFontColor}">
				<Grid Margin="0,-1,1.6,-0.2"
					  Background="{DynamicResource MyMint}">
					<Grid Margin="10,390,0,10"
						  HorizontalAlignment="Left"
						  Width="382">
						<ProgressBar x:Name="HP"
									 HorizontalAlignment="Left"
									 Height="32"
									 Margin="101,27,0,0"
									 VerticalAlignment="Top"
									 Width="253"
									 Value="100"
									 BorderBrush="{DynamicResource MyDarkGreen}"
									 Foreground="{DynamicResource MyLightGreen}">
						</ProgressBar>
						<ProgressBar x:Name="Cold"
									 HorizontalAlignment="Left"
									 Height="30"
									 Margin="101,100,0,0"
									 VerticalAlignment="Top"
									 Width="253"
									 Value="50"
									 BorderBrush="{DynamicResource MyDarkGreen}"
									 Foreground="{DynamicResource MyLightGreen}">
						</ProgressBar>
						<Label x:Name="TextHP"
							   Content="HP"
							   HorizontalAlignment="Left"
							   Height="32"
							   Margin="29,27,0,0"
							   VerticalAlignment="Top"
							   Width="41"
							   FontSize="18"
							   Padding="0"
							   Foreground="{DynamicResource MyFontColor}">
						</Label>
						<Label x:Name="TextFun"
							   Content="Fun"
							   HorizontalAlignment="Left"
							   Height="32"
							   Margin="29,63,0,0"
							   VerticalAlignment="Top"
							   Width="53"
							   FontSize="18"
							   Padding="0"
							   Foreground="{DynamicResource MyFontColor}">
						</Label>
						<Label x:Name="TextCold"
							   Content="Temp"
							   HorizontalAlignment="Left"
							   Height="32"
							   Margin="29,100,0,0"
							   VerticalAlignment="Top"
							   Width="56"
							   Padding="0"
							   FontSize="18"
							   Foreground="{DynamicResource MyFontColor}">
						</Label>
						<ProgressBar x:Name="Fun"
									 HorizontalAlignment="Left"
									 Height="32"
									 Margin="101,63,0,0"
									 VerticalAlignment="Top"
									 Width="253"
									 Value="50"
									 BorderBrush="{DynamicResource MyDarkGreen}"
									 Foreground="{DynamicResource MyLightGreen}">
						</ProgressBar>
					</Grid>

					<CheckBox x:Name="plaid"
							  Content="Плед"
							  HorizontalAlignment="Left"
							  Height="25"
							  Margin="490,229,0,0"
							  VerticalAlignment="Top"
							  Width="131"
							  Padding="2,-10,0,0"
							  ScrollViewer.CanContentScroll="True"
							  FontSize="24"
							  Foreground="{DynamicResource DarkBlue}">
					</CheckBox>
					<Label x:Name="Text"
						   Content="Взаимодействие"
						   Height="47"
						   Margin="535,10,96,0"
						   VerticalAlignment="Top"
						   FontSize="24"
						   Foreground="{DynamicResource DarkBlue}">
					</Label>
					<Button x:Name="Fanfiks"
							Content="Фанфики"
							HorizontalAlignment="Left"
							Height="43"
							Margin="490,84,0,0"
							VerticalAlignment="Top"
							Width="131"
							FontSize="24"
							Click="Fanfiks_Click"
							Foreground="{DynamicResource DarkBlue}"
							BorderBrush="{DynamicResource MidBlue}"
							Background="{DynamicResource LightBlue}">
					</Button>
					<Button x:Name="Music"
							Content="Музыка"
							HorizontalAlignment="Left"
							Height="43"
							Margin="655,84,0,0"
							VerticalAlignment="Top"
							Width="131"
							FontSize="24"
							Click="Music_Click"
							IsEnabled="False"
							Foreground="{DynamicResource DarkBlue}"
							BorderBrush="{DynamicResource MidBlue}"
							Background="{DynamicResource LightBlue}">
					</Button>
					<Button x:Name="Cake"
							Content="Тортики"
							HorizontalAlignment="Left"
							Height="43"
							Margin="490,158,0,0"
							VerticalAlignment="Top"
							Width="131"
							FontSize="24"
							Background="#FFC6E2E9"
							Click="Cake_Click"
							Foreground="{DynamicResource DarkBlue}"
							BorderBrush="{DynamicResource MidBlue}">
					</Button>
					<Button x:Name="Coffe"
							Content="Кофе"
							HorizontalAlignment="Left"
							Height="43"
							Margin="655,158,0,0"
							VerticalAlignment="Top"
							Width="131"
							FontSize="24"
							Background="#FFC6E2E9"
							Click="Coffe_Click"
							Foreground="{DynamicResource DarkBlue}"
							BorderBrush="{DynamicResource MidBlue}">
					</Button>
					<CheckBox x:Name="headphone"
							  Content="Наушники"
							  HorizontalAlignment="Left"
							  Height="25"
							  Margin="655,229,0,0"
							  VerticalAlignment="Top"
							  Width="131"
							  Padding="2,-10,0,0"
							  ScrollViewer.CanContentScroll="True"
							  FontSize="24"
							  Click="headphone_Click"
							  Foreground="{DynamicResource DarkBlue}">
					</CheckBox>
				</Grid>
			</TabItem>
		</TabControl>
	</Grid>
</UserControl>
